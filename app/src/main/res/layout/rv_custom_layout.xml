<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="15dp"
    android:elevation="10dp"
    android:padding="30dp"

    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_user_image"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/userImageBackgroundColor"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_image" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/cv_user_image"
            android:background="@drawable/common_background"
            android:gravity="center_vertical"
            android:hint="userName"
            android:inputType="text"
            android:minWidth="100dp"
            android:paddingStart="10dp"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_salary"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_user_name"
            android:layout_alignStart="@id/et_user_name"
            android:layout_marginTop="7dp"
            android:background="@drawable/common_background"
            android:gravity="center_vertical"
            android:hint="salary"
            android:inputType="number"
            android:minWidth="100dp"
            android:paddingStart="10dp"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/et_salary"
            android:layout_alignStart="@id/et_user_name"
            android:layout_marginTop="7dp"
            android:background="@drawable/common_background"
            android:gravity="center_vertical"
            android:hint="age"
            android:inputType="number"
            android:minWidth="100dp"
            android:paddingStart="10dp"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/et_user_name"
            android:background="@drawable/common_background"
            android:gravity="center_vertical"
            android:hint="Phone Number"
            android:inputType="phone"
            android:minWidth="100dp"
            android:paddingStart="10dp"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_dob"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/et_phone_number"
            android:layout_alignStart="@id/et_phone_number"
            android:layout_marginTop="7dp"
            android:background="@drawable/common_background"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="DOB"
            android:inputType="date"
            android:minWidth="100dp"
            android:paddingStart="10dp"
            android:textSize="12sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>